# E-Business Backend Environment Configuration
# Copy this file to .env and update values as needed

# Database Configuration
DATABASE_URL=postgresql+asyncpg://postgres:postgres@localhost:5432/e_business

# Redis Configuration
REDIS_URL=redis://localhost:6379/0

# Security Configuration
SECRET_KEY=your-secret-key-change-in-production
ACCESS_TOKEN_EXPIRE_MINUTES=30

# AI Provider Configuration
DEEPSEEK_API_KEY=your_deepseek_api_key_here
DEEPSEEK_MODEL=deepseek-chat
DEEPSEEK_MAX_TOKENS=2000
DEEPSEEK_TIMEOUT=120

# MinIO Configuration
MINIO_ENDPOINT=localhost:9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
MINIO_BUCKET=e-business

# Application Settings
APP_ENV=development
DEBUG=true
CORS_ORIGINS=http://localhost:3000,http://localhost:8000

# Logging
LOG_LEVEL=INFO

# HTTP Client Configuration
# Connection timeout in seconds (default: 5)
HTTP_TIMEOUT_CONNECT=5
# Read timeout in seconds (default: 30)
HTTP_TIMEOUT_READ=30
# Total request timeout in seconds (default: 60)
HTTP_TIMEOUT_TOTAL=60
# Maximum retry attempts for transient failures (default: 3, range: 0-10)
HTTP_MAX_RETRIES=3
# Base for exponential backoff in seconds (default: 1.0, range: 0.1-10.0)
HTTP_BACKOFF_BASE=1.0
