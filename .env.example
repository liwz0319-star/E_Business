# E-Business Backend Environment Configuration
# Copy this file to .env and fill in the values

# ============================================
# DATABASE CONFIGURATION
# ============================================
# PostgreSQL connection URL
# Format: postgresql+asyncpg://user:password@host:port/database
DATABASE_URL=postgresql+asyncpg://postgres:postgres@localhost:5432/e_business

# ============================================
# REDIS CONFIGURATION
# ============================================
# Redis connection URL for caching and real-time features
REDIS_URL=redis://localhost:6379/0

# ============================================
# SECURITY CONFIGURATION
# ============================================
# Secret key for JWT token signing - CHANGE THIS IN PRODUCTION!
# Generate with: python -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=your-secret-key-change-in-production

# JWT token expiration in minutes
ACCESS_TOKEN_EXPIRE_MINUTES=30

# ============================================
# AI PROVIDER CONFIGURATION
# ============================================
# DeepSeek API key for AI-powered content generation
DEEPSEEK_API_KEY=your-deepseek-api-key

# ============================================
# MINIO CONFIGURATION (Object Storage)
# ============================================
# MinIO endpoint for file storage
MINIO_ENDPOINT=localhost:9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
MINIO_BUCKET=e-business

# ============================================
# APPLICATION SETTINGS
# ============================================
# Application environment: development, staging, production
APP_ENV=development

# Debug mode (set to false in production)
DEBUG=true

# CORS allowed origins (comma-separated)
CORS_ORIGINS=http://localhost:3000,http://localhost:8000

# ============================================
# LOGGING
# ============================================
# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO
